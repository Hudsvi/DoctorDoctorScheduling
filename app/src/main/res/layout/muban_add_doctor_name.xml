<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/muban_edit_name_title_ll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/blue_mid_light"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/muban_doctor_name_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:paddingBottom="13dp"
            android:paddingTop="13dp"
            android:src="@drawable/edit_del"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/muban_doctor_name_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加医生"
            android:textSize="20sp"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/muban_doctor_name_back"
            app:layout_constraintRight_toLeftOf="@+id/muban_doctor_name_ok"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/muban_doctor_name_ok"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:paddingBottom="13dp"
            android:paddingTop="13dp"
            android:src="@drawable/edit_ok"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>
<android.support.constraint.ConstraintLayout
    android:id="@+id/muban_doctor_name_add_cons"
    android:layout_width="0dp"
    app:layout_constraintTop_toBottomOf="@+id/muban_edit_name_title_ll"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/muban_add_dept_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="选择科室："
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Spinner
        android:id="@+id/muban_add_dept_spinner"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:maxLines="1"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/muban_add_dept_tv"
        app:layout_constraintLeft_toRightOf="@+id/muban_add_dept_tv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintTop_toTopOf="@+id/muban_add_dept_tv"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

    <TextView
        android:id="@+id/muban_add_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="姓名："
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/muban_add_dept_tv" />

    <EditText
        android:id="@+id/muban_add_name_edittext"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:drawableBottom="@drawable/edit_line"
        android:hint="添加医生"
        android:textColorHint="@color/text_secondary"
        android:maxLines="1"
        android:paddingLeft="4dp"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/muban_add_name_tv"
        app:layout_constraintLeft_toRightOf="@+id/muban_add_name_tv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/muban_add_name_tv" />
</android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/muban_add_name_update_cons"
        android:layout_width="0dp"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/muban_edit_name_title_ll"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/muban_add_name_update_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="新姓名："
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

        <EditText
            android:id="@+id/muban_add_name_update_edittext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:drawableBottom="@drawable/edit_line"
            android:hint="医生名字"
            android:textColorHint="@color/text_secondary"
            android:maxLines="1"
            android:paddingLeft="4dp"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/muban_add_name_update_tv"
            app:layout_constraintLeft_toRightOf="@+id/muban_add_name_update_tv"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/muban_add_name_update_tv" />
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>

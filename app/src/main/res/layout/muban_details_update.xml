<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/muban_details_update_update_cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/yellow_light"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:elevation="6dp"
    app:cardCornerRadius="8dp">
    <android.support.constraint.ConstraintLayout
        android:id="@+id/muban_details_update_update_cons_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:focusable="true"
        android:focusableInTouchMode="true">
        <ImageView
            android:id="@+id/muban_details_title"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/add01"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="32dp"
            app:layout_constraintVertical_bias="0.7"
            android:layout_marginEnd="32dp" />

        <TextView
            android:id="@+id/muban_details_week_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="请选择星期:"
            android:textColor="@color/black_yellow"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/muban_details_update_days"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/muban_details_update_days" />

        <Spinner
            android:id="@+id/muban_details_update_days"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:entries="@array/day_of_week"
            android:padding="8dp"
            android:textSize="16sp"
            app:layout_constraintLeft_toRightOf="@+id/muban_details_week_tv"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/munban_is_or_not_diagnose_tv_am"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/muban_details_diagnose_am"
            android:textColor="@color/black_yellow"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/muban_details_update_days" />

        <Spinner
            android:id="@+id/muban_is_or_not_diagnose_am"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:entries="@array/muban_details_diagnose_choosing"
            android:padding="8dp"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/munban_is_or_not_diagnose_tv_am"
            app:layout_constraintLeft_toRightOf="@+id/munban_is_or_not_diagnose_tv_am"
            app:layout_constraintTop_toTopOf="@+id/munban_is_or_not_diagnose_tv_am" />

        <TextView
            android:id="@+id/muban_details_update_start_tv_am"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:text="@string/muban_details_start_am"
            android:textColor="@color/black_yellow"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/munban_is_or_not_diagnose_tv_am" />

        <TextView
            android:id="@+id/muban_details_update_start_time_am"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:text="08:30 AM"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/muban_details_update_start_tv_am"
            app:layout_constraintLeft_toRightOf="@+id/muban_details_update_start_tv_am"
            app:layout_constraintTop_toTopOf="@+id/muban_details_update_start_tv_am" />


        <TextView
            android:id="@+id/muban_details_update_end_tv_am"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:text="@string/muban_details_end_am"
            android:textColor="@color/black_yellow"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/muban_details_update_start_tv_am" />

        <TextView
            android:id="@+id/muban_details_update_end_time_am"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:text="11:30 AM"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/muban_details_update_end_tv_am"
            app:layout_constraintLeft_toRightOf="@+id/muban_details_update_end_tv_am"
            app:layout_constraintTop_toTopOf="@+id/muban_details_update_end_tv_am" />

        <TextView
            android:id="@+id/muban_details_update_amount_am_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="@string/muban_details_amount_am"
            android:textColor="@color/black_yellow"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/muban_details_update_end_tv_am" />

        <EditText
            android:id="@+id/muban_details_update_amount_am"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="放号量"
            android:maxLength="2"
            android:digits="1234567890"
            android:maxLines="1"
            android:padding="8dp"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/muban_details_update_amount_am_tv"
            app:layout_constraintLeft_toRightOf="@+id/muban_details_update_amount_am_tv"
            app:layout_constraintTop_toTopOf="@+id/muban_details_update_amount_am_tv" />

        <TextView
            android:text="@string/muban_details_time_eachone"
            android:layout_width="wrap_content"
            android:textSize="16sp"
            android:padding="8dp"
            android:textColor="@color/black_yellow"
            android:layout_height="wrap_content"
            android:id="@+id/muban_doctoor_textView1"
            app:layout_constraintBottom_toBottomOf="@+id/muban_details_update_amount_am_tv"
            app:layout_constraintTop_toTopOf="@+id/muban_details_update_amount_am_tv"
            app:layout_constraintLeft_toRightOf="@+id/muban_details_update_amount_am"
            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:id="@+id/muban_doctoor_time_set_eachone2"
            android:hint="/分钟"
            android:background="@null"
            android:maxLines="1"
            android:maxLength="2"
            app:layout_constraintBottom_toBottomOf="@+id/muban_details_update_amount_am_tv"
            app:layout_constraintLeft_toRightOf="@+id/muban_doctoor_textView1"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintTop_toTopOf="@+id/muban_doctoor_textView1"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp"
            app:layout_constraintHorizontal_bias="0.01" />

        <View
            android:id="@+id/muban_details_update_view"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginEnd="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/div_line_vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/muban_details_update_amount_am" />

        <TextView
            android:id="@+id/munban_is_or_not_diagnose_tv_pm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="@string/muban_details_diagnose_pm"
            app:layout_constraintTop_toBottomOf="@+id/muban_details_update_view"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textColor="@color/black_yellow"
            android:textSize="16sp"/>

        <Spinner
            android:id="@+id/muban_is_or_not_diagnose_pm"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:entries="@array/muban_details_diagnose_choosing"
            android:textSize="16sp"
            android:padding="8dp"
            app:layout_constraintTop_toTopOf="@+id/munban_is_or_not_diagnose_tv_pm"
            app:layout_constraintBottom_toBottomOf="@+id/munban_is_or_not_diagnose_tv_pm"
            app:layout_constraintLeft_toRightOf="@+id/munban_is_or_not_diagnose_tv_pm"
            />

        <TextView
            android:id="@+id/muban_details_update_start_tv_pm"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:paddingTop="16dp"
            android:paddingLeft="8dp"
            android:text="@string/muban_details_start_pm"
            android:textColor="@color/black_yellow"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/munban_is_or_not_diagnose_tv_pm" />

        <TextView
            android:id="@+id/muban_details_update_start_time_pm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="14:00 PM"
            android:paddingTop="16dp"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/muban_details_update_start_tv_pm"
            app:layout_constraintLeft_toRightOf="@+id/muban_details_update_start_tv_pm"
            app:layout_constraintTop_toTopOf="@+id/muban_details_update_start_tv_pm" />

        <TextView
            android:id="@+id/muban_details_update_end_tv_pm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingTop="16dp"
            android:paddingLeft="8dp"
            android:text="@string/muban_details_end_pm"
            android:textColor="@color/black_yellow"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/muban_details_update_start_time_pm" />


                <TextView
                    android:id="@+id/muban_details_update_end_time_pm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="16dp"
                    android:paddingLeft="8dp"
                    android:text="18:00 PM"
                    android:textSize="16sp"
                    app:layout_constraintLeft_toRightOf="@+id/muban_details_update_end_tv_pm"
                    app:layout_constraintTop_toTopOf="@+id/muban_details_update_end_tv_pm" />

                <TextView
                    android:id="@+id/muban_details_update_amount_pm_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:layout_marginTop="16dp"
                    android:text="@string/muban_details_amount_pm"
                    android:textColor="@color/black_yellow"
                    android:textSize="16sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/muban_details_update_end_time_pm" />

                <EditText
                    android:id="@+id/muban_details_update_amount_pm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="center"
                    android:hint="放号量"
                    android:digits="1234567890"
                    android:paddingLeft="8dp"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="@+id/muban_details_update_amount_pm_tv"
                    app:layout_constraintLeft_toRightOf="@+id/muban_details_update_amount_pm_tv"
                    app:layout_constraintTop_toTopOf="@+id/muban_details_update_amount_pm_tv" />
<TextView
            android:layout_width="wrap_content"
            android:textSize="16sp"
            android:padding="8dp"
    android:textColor="@color/black_yellow"
    android:layout_marginLeft="8dp"
            android:layout_height="wrap_content"
            android:id="@+id/muban_doctoor_textView11"
            app:layout_constraintBottom_toBottomOf="@+id/muban_details_update_amount_pm_tv"
            android:text="@string/muban_details_time_eachone"
            app:layout_constraintTop_toTopOf="@+id/muban_details_update_amount_pm_tv"
            app:layout_constraintLeft_toRightOf="@+id/muban_details_update_amount_pm"
    android:layout_marginStart="8dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:id="@+id/muban_doctoor_time_set_eachone3"
            android:layout_marginTop="2dp"
            android:hint="/分钟"
            android:background="@null"
            android:maxLines="1"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="16dp"
            android:maxLength="2"
            app:layout_constraintBottom_toBottomOf="@+id/muban_details_update_amount_pm_tv"
            app:layout_constraintTop_toTopOf="@+id/muban_details_update_amount_pm_tv"
            app:layout_constraintLeft_toRightOf="@+id/muban_doctoor_textView11"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.15" />
                <View
                    android:id="@+id/muban_details_update_view2"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/div_line_vertical"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/muban_details_update_amount_pm"
                    />
<Button
    android:layout_height="wrap_content"
    android:layout_width="0dp"
    android:layout_marginBottom="16dp"
    android:layout_marginLeft="64dp"
    android:layout_marginRight="64dp"
    android:text="保存修改"
    android:textColor="@color/white"
    android:background="@drawable/bt_start_using"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_marginStart="64dp"
    android:layout_marginEnd="64dp" />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>

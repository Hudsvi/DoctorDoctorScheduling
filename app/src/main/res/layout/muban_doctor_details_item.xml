<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/muban_doctor_details_cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="6dp"
    app:cardCornerRadius="6dp">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/muban_doctor_details_cons_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/muban_details_days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingRight="8dp"
            android:paddingTop="8dp"
            android:text="2017-3-28"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/muban_details_day_of_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingRight="8dp"
            android:paddingTop="8dp"
            android:text="下周一"
            android:textSize="18sp"
            app:layout_constraintLeft_toRightOf="@+id/muban_details_days"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/munban_is_or_not_diagnose_tv_am"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/muban_details_diagnose_am"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/muban_details_day_of_week" />

        <TextView
            android:id="@+id/muban_is_or_not_diagnose_am"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="8dp"
            android:text="是"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/munban_is_or_not_diagnose_tv_am"
            app:layout_constraintLeft_toRightOf="@+id/munban_is_or_not_diagnose_tv_am"
            app:layout_constraintTop_toTopOf="@+id/munban_is_or_not_diagnose_tv_am"

            />

        <TextView
            android:id="@+id/muban_details_start_tv_am"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="8dp"
            android:paddingBottom="4dp"
            android:text="@string/muban_details_start_am"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/munban_is_or_not_diagnose_tv_am" />

        <TextView
            android:id="@+id/muban_details_start_time_am"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="12dp"
            android:text="08:30 AM"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/muban_details_start_tv_am" />

        <TextView
            android:id="@+id/muban_details_end_tv_am"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="8dp"
            android:paddingBottom="4dp"
            android:text="@string/muban_details_end_am"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/muban_details_start_tv_am"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/muban_details_start_tv_am" />

        <TextView
            android:id="@+id/muban_details_end_time_am"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="12dp"
            android:text="11:30 AM"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="@+id/muban_details_end_tv_am"
            app:layout_constraintTop_toBottomOf="@+id/muban_details_end_tv_am" />

        <TextView
            android:id="@+id/muban_details_amount_am_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:text="@string/muban_details_amount_am"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/muban_details_start_time_am" />

        <TextView
            android:id="@+id/muban_details_amount_am"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="8dp"
            android:text="7"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/muban_details_amount_am_tv"
            app:layout_constraintLeft_toRightOf="@id/muban_details_amount_am_tv"
            app:layout_constraintTop_toTopOf="@id/muban_details_amount_am_tv" />
        <View
            android:id="@+id/muban_details_view"
            android:background="@drawable/div_line_vertical"
            android:layout_width="0dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/muban_details_amount_am_tv"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <TextView
            android:id="@+id/munban_is_or_not_diagnose_tv_pm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/muban_details_diagnose_pm"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/muban_details_view" />

        <TextView
            android:id="@+id/muban_is_or_not_diagnose_pm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="8dp"
            android:text="是"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/munban_is_or_not_diagnose_tv_pm"
            app:layout_constraintLeft_toRightOf="@+id/munban_is_or_not_diagnose_tv_pm"
            app:layout_constraintTop_toTopOf="@+id/munban_is_or_not_diagnose_tv_pm"

            />

        <TextView
            android:id="@+id/muban_details_start_tv_pm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/muban_details_start_pm"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/munban_is_or_not_diagnose_tv_pm" />

        <TextView
            android:id="@+id/muban_details_start_time_pm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="12dp"
            android:text="14:00 PM"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/muban_details_start_tv_pm" />

        <TextView
            android:id="@+id/muban_details_end_tv_pm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/muban_details_end_pm"
            android:textSize="16sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/muban_details_start_tv_pm" />

        <TextView
            android:id="@+id/muban_details_end_time_pm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="12dp"
            android:text="18:00 PM"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="@+id/muban_details_end_tv_pm"
            app:layout_constraintTop_toBottomOf="@+id/muban_details_end_tv_pm" />

        <TextView
            android:id="@+id/muban_details_amount_pm_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:text="@string/muban_details_amount_pm"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/muban_details_start_time_pm" />

        <TextView
            android:id="@+id/muban_details_amount_pm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="8dp"
            android:text="7"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/muban_details_amount_pm_tv"
            app:layout_constraintLeft_toRightOf="@id/muban_details_amount_pm_tv"
            app:layout_constraintTop_toTopOf="@id/muban_details_amount_pm_tv" />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>

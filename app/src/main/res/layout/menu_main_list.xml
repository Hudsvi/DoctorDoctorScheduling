<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/blue_mid_light">
    <LinearLayout
        android:id="@+id/main_menu_Linearlayout"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="8dp"
            android:paddingRight="24dp">

            <ImageView
                android:id="@+id/main_menu_item1_img"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:paddingBottom="8dp"
                android:paddingLeft="8dp"
                android:paddingRight="10dp"
                android:paddingTop="8dp"
                android:src="@drawable/fabu" />

            <TextView
                android:id="@+id/menu_main_item1_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingBottom="24dp"
                android:paddingTop="24dp"
                android:paddingLeft="8dp"
                android:text="预约列表"
                android:textColor="@color/gray"
                android:textSize="18sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingRight="24dp"
            android:paddingLeft="8dp">

            <ImageView
                android:id="@+id/main_menu_item2_img"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:paddingBottom="8dp"
                android:paddingLeft="8dp"
                android:paddingRight="10dp"
                android:paddingTop="8dp"
                android:src="@drawable/fabu" />

            <TextView
                android:id="@+id/menu_main_item2_tv"
                android:layout_width="match_parent"
                android:paddingLeft="8dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingBottom="24dp"
                android:paddingTop="24dp"
                android:text="预约设置"
                android:textColor="@color/gray"
                android:textSize="18sp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/menu_main_item3_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="24dp"
            android:visibility="gone"
            android:orientation="horizontal"
            android:paddingLeft="8dp">

            <ImageView
                android:id="@+id/main_menu_item3_img"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:paddingBottom="8dp"
                android:paddingLeft="8dp"
                android:paddingRight="10dp"
                android:paddingTop="8dp"
                android:src="@drawable/fabu" />

            <TextView
                android:id="@+id/menu_main_item3_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingBottom="24dp"
                android:paddingTop="24dp"
                android:text="预约列表"
                android:textColor="@color/gray"
                android:textSize="18sp" />
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/menu_main_item4_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="24dp"
            android:orientation="horizontal"
            android:paddingLeft="8dp">

            <ImageView
                android:id="@+id/main_menu_item4_img"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:paddingBottom="8dp"
                android:paddingLeft="8dp"
                android:paddingRight="10dp"
                android:paddingTop="8dp"
                android:src="@drawable/fabu" />

            <TextView
                android:id="@+id/menu_main_item4_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingBottom="24dp"
                android:paddingTop="24dp"
                android:text="预约列表"
                android:textColor="@color/gray"
                android:textSize="18sp" />
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/menu_main_item5_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="24dp"
            android:orientation="horizontal"
            android:paddingLeft="8dp">

            <ImageView
                android:id="@+id/main_menu_item5_img"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:paddingBottom="8dp"
                android:paddingLeft="8dp"
                android:paddingRight="10dp"
                android:paddingTop="8dp"
                android:src="@drawable/fabu" />

            <TextView
                android:id="@+id/menu_main_item5_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingBottom="24dp"
                android:paddingTop="24dp"
                android:text="预约列表"
                android:textColor="@color/gray"
                android:textSize="18sp" />
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/menu_main_item6_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="24dp"
            android:orientation="horizontal"
            android:paddingLeft="8dp">

            <ImageView
                android:id="@+id/main_menu_item6_img"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:paddingBottom="8dp"
                android:paddingLeft="8dp"
                android:paddingRight="10dp"
                android:paddingTop="8dp"
                android:src="@drawable/fabu" />

            <TextView
                android:id="@+id/menu_main_item6_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingBottom="24dp"
                android:paddingTop="24dp"
                android:text="预约列表"
                android:textColor="@color/gray"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

//返回

    <LinearLayout
        android:id="@+id/main_menu_back_linearlayout"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:padding="8dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/main_menu_Linearlayout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
    <ImageView
        android:id="@+id/main_menu_go_back"
        android:src="@drawable/goback"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="10dp"
        android:layout_gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/menu_main_back_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/back"
        android:textColor="@color/gray"
        android:textSize="18sp" />
</LinearLayout>

</android.support.constraint.ConstraintLayout>
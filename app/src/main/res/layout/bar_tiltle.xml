<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bluedark">
    <TextView
        android:id="@+id/main_titlebar_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:text="这不是标题"
        android:textColor="@color/green"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@+id/main_titlebar_user"
        android:layout_height="32dp"
        android:layout_width="32dp"
        android:visibility="gone"
        android:layout_marginLeft="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/main_titlebar_textview"
        app:layout_constraintBottom_toBottomOf="@+id/main_titlebar_textview"
        android:layout_marginStart="16dp" />

    <ImageView
        android:id="@+id/main_titlebar_menu"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:visibility="gone"
        android:layout_marginRight="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/main_titlebar_textview"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/main_titlebar_textview" />


</android.support.constraint.ConstraintLayout>
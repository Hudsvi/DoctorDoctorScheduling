<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/paiban_list_cardview"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginBottom="4dp"
    app:cardBackgroundColor="@color/white"
    android:elevation="6dp"
    android:layout_marginTop="4dp"
    app:cardCornerRadius="4dp">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/paiban_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/paiban_list_d_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/green"
            android:text="赵四"
            android:layout_marginTop="8dp"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <View
            android:id="@+id/paiban_list_div_1"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/div_line_vertical_light_dark"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/paiban_list_d_name" />

                <TextView
                    android:id="@+id/paiban_list_duration_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:textColor="@color/graydark"
                    android:text="上午:"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:textSize="16sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/paiban_list_div_1" />

                <TextView
                    android:id="@+id/paiban_list_d_time1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:gravity="center"
                    android:text="09:00:00"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:textColor="@color/graydark"
                    android:textSize="16sp"
                    app:layout_constraintLeft_toRightOf="@+id/paiban_list_duration_tv"
                    app:layout_constraintTop_toTopOf="@+id/paiban_list_duration_tv" />

                <TextView
                    android:id="@+id/paiban_list_div_line"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="5dp"
                    android:paddingBottom="4dp"
                    android:paddingLeft="4dp"
                    android:text="AM ～"
                    android:layout_marginRight="8dp"
                    android:textColor="@color/yellow"
                    android:textSize="14sp"
                    app:layout_constraintTop_toTopOf="@+id/paiban_list_d_time1"
                    app:layout_constraintLeft_toRightOf="@+id/paiban_list_d_time1"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintRight_toRightOf="parent" />

                <TextView
                    android:id="@+id/paiban_list_d_time2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginLeft="8dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:text="11:20:00"
                    android:textColor="@color/graydark"
                    android:textSize="16sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/paiban_list_d_time1"
                    android:layout_marginStart="8dp" />

                <TextView
                    android:id="@+id/paiban_list_div_line2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="5dp"
                    android:paddingRight="4dp"
                    android:paddingLeft="4dp"
                    android:paddingBottom="4dp"
                    android:text="AM"
                    android:textColor="@color/yellow"
                    android:textSize="14sp"
                    app:layout_constraintLeft_toRightOf="@+id/paiban_list_d_time2"
                    app:layout_constraintTop_toTopOf="@+id/paiban_list_d_time2" />

                <TextView
                    android:id="@+id/paiban_list_amount_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:textColor="@color/graydark"
                    android:layout_marginStart="8dp"
                    android:gravity="center"
                    android:text="上午放号量:"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:textSize="16sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/paiban_list_d_time2" />

                <TextView
                    android:id="@+id/paiban_list_d_amount1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:gravity="center"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:paddingLeft="8dp"
                    android:textColor="@color/yellow"
                    android:textSize="16sp"
                    app:layout_constraintLeft_toRightOf="@+id/paiban_list_amount_tv"
                    app:layout_constraintTop_toTopOf="@+id/paiban_list_amount_tv" />

                <View
                    android:id="@+id/paiban_list_div_line3"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/div_line_vertical_light_dark"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/paiban_list_amount_tv" />


                <TextView
                    android:id="@+id/paiban_list_duration_tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:textColor="@color/graydark"
                    android:text="下午:"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:textSize="16sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/paiban_list_div_line3" />

                <TextView
                    android:id="@+id/paiban_list_d_time12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="14:00:00"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:textColor="@color/graydark"
                    android:textSize="16sp"
                    android:layout_marginStart="16dp"
                    app:layout_constraintLeft_toRightOf="@+id/paiban_list_duration_tv2"
                    android:layout_marginLeft="16dp"
                    app:layout_constraintTop_toTopOf="@+id/paiban_list_duration_tv2" />

                <TextView
                    android:id="@+id/paiban_list_div_line22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="PM ～"
                    android:paddingTop="5dp"
                    android:paddingBottom="4dp"
                    android:paddingLeft="4dp"
                    android:textColor="@color/sup_ok"
                    android:textSize="14sp"
                    app:layout_constraintLeft_toRightOf="@+id/paiban_list_d_time12"
                    app:layout_constraintTop_toTopOf="@+id/paiban_list_d_time12" />

                <TextView
                    android:id="@+id/paiban_list_d_time22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:text="17:20:00"
                    android:textColor="@color/graydark"
                    android:textSize="16sp"
                    app:layout_constraintTop_toBottomOf="@+id/paiban_list_duration_tv2"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp" />

                <TextView
                    android:id="@+id/paiban_list_div_line222"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="5dp"
                    android:paddingBottom="4dp"
                    android:text="PM"
                    android:paddingLeft="4dp"
                    android:textColor="@color/sup_ok"
                    android:textSize="14sp"
                    app:layout_constraintLeft_toRightOf="@+id/paiban_list_d_time22"
                    app:layout_constraintTop_toBottomOf="@+id/paiban_list_duration_tv2" />

                <TextView
                    android:id="@+id/paiban_list_amount_tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:gravity="center"
                    android:text="下午放号量:"
                    android:textColor="@color/graydark"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:textSize="16sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/paiban_list_d_time22"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/paiban_list_d_amount2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="6dp"
                    android:paddingBottom="4dp"
                    android:paddingLeft="8dp"
                    android:text="6"
                    android:textColor="@color/sup_ok"
                    android:textSize="16sp"
                    app:layout_constraintLeft_toRightOf="@+id/paiban_list_amount_tv2"
                    app:layout_constraintTop_toBottomOf="@+id/paiban_list_div_line222" />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<ImageView
    android:id="@+id/ptr_header_rotate"
    android:layout_width="20dp"
    android:layout_marginBottom="10dp"
    android:layout_marginRight="64dp"
    android:layout_height="20dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:src="@drawable/loading"
    app:layout_constraintVertical_bias="0.8"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_marginEnd="64dp" />
    <ImageView
    android:id="@+id/ptr_header_arrow"
    android:layout_width="16dp"
    android:layout_height="24dp"
        app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_marginRight="64dp"
    android:src="@drawable/arrow"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.8"
    app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="64dp" />
    <TextView
        android:id="@+id/ptr_header_title"
        android:gravity="center"
        android:textSize="14sp"
        android:text="@string/ptr_pull"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:gravity="center"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@+id/ptr_header_title"
        app:layout_constraintLeft_toLeftOf="@+id/ptr_header_title"
        app:layout_constraintRight_toRightOf="@+id/ptr_header_title"
        android:id="@+id/ptr_header_update_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
<View
    android:layout_width="0dp"
    android:layout_height="1dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:background="@drawable/div_line_vertical_light_dark"/>
</android.support.constraint.ConstraintLayout>
